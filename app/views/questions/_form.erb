<%= form_for(question) do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :position, class: 'mdl-textfield__input', id: 'question-position', disabled: true %>
      <label class="mdl-textfield__label" for="question-position">Position</label>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :question, class: 'mdl-textfield__input', id: 'question' %>
      <label class="mdl-textfield__label" for="question">Question</label>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :answer, class: 'mdl-textfield__input', id: 'question-answer' %>
      <label class="mdl-textfield__label" for="question-answer">Answer</label>
    </div>

    <% if question.created_at.present? %>
      <div class="dates">
        <span class="date">Created at: <%=question.created_at.strftime('%d %b %y') %></span>
        <span class="date">Updated at: <%=question.updated_at.strftime('%d %b %y') %></span>
      </div>
    <% end%>

    <%= f.submit 'Save', class: "mdl-button mdl-js-button mdl-button--raised image-save-button"%>
<%end%>

<script>
  $(function () {

  });
</script>