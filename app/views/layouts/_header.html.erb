<% image = image_tag("nwkendo_logo_sm.png", :alt => "NW Kendo Logo") %>

<header class="nw-header">
  <div class="row">
    <div class="col-1"></div>
    <div class="col header-title">
       <div class="title-icons">
         <!--<%= link_to '', id: 'menu-toggle' do %>-->
           <!--<i class="material-icons">menu</i>-->
         <!--<%end%>-->
         <%= link_to image, root_path %>
       </div>
      <h3>NW Kendo</h3>
    </div>
    <div class="col-6">
      <% if flash[:notice] %>
          <div class="alert alert-success" role="alert">
            <%= flash[:notice] %>
          </div>
      <% end %>
      <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
      <% end %>
    </div>
    <div class="col-2"></div>
  </div>
</header>
