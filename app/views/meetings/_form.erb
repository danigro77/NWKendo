<div class="col">
  <%= form_for(meeting) do |f| %>
    <div class="form-group row">
      <label for="meeting-name" class="col-2 col-form-label">Name</label>
      <div class="col-12">
        <%= f.text_field :name, class: 'form-control', id: 'meeting-name' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="meeting-start-time" class="col-2 col-form-label">Start time</label>
      <div class="col-12">
        <% meeting_time = meeting.start_time.present? ? meeting.start_time.strftime('%Y-%m-%dT%H:%M') : meeting.start_time %>
        <%= f.text_field :start_time, class: 'form-control', id: 'meeting-start-time', type: "datetime-local", value: meeting_time  %>
      </div>
    </div>


    <div class="form-group row">
      <label for="meeting-end-time" class="col-2 col-form-label">End time</label>
      <div class="col-12">
        <% meeting_time = meeting.end_time.present? ? meeting.end_time.strftime('%Y-%m-%dT%H:%M') : meeting.end_time %>
        <%= f.text_field :end_time, class: 'form-control', id: 'meeting-end-time', type: "datetime-local", value: meeting_time  %>
      </div>
    </div>

    <div class="form-group row">
      <label for="meeting-location" class="col-2 col-form-label">Location</label>
      <div class="col-12">
        <%= f.text_field :location, class: 'form-control', id: 'meeting-location' %>
      </div>
    </div>

    <div class="form-group row">
      <label for="meeting-description" class="col-2 col-form-label">Description</label>
      <div class="col-12">
        <%= f.text_field :description, class: 'form-control', id: 'meeting-description' %>
      </div>
    </div>


    <% if meeting.created_at.present? %>
      <div class="dates row">
        <div class="date col">Created at: <%= meeting.created_at.strftime('%d %b %y') %></div>
        <div class="date col">Updated at: <%= meeting.updated_at.strftime('%d %b %y') %></div>
        <div class="button col"><%= f.submit 'Save', class: "meeting-save-button btn btn-outline-primary btn-lg"%></div>
      </div>
    <%else%>
      <div class="dates row">
        <div class="date col"></div>
        <div class="date col"></div>
        <div class="button col"><%= f.submit 'Save', class: "meeting-save-button btn btn-outline-primary btn-lg"%></div>
      </div>
    <%end%>
  <%end%>

</div>
