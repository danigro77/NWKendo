<%= form_for(photographer) do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :full_name, class: 'mdl-textfield__input', id: 'photographer-name' %>
      <label class="mdl-textfield__label" for="photographer-name">Full Name</label>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :contact_email, class: 'mdl-textfield__input', id: 'photographer-email' %>
      <label class="mdl-textfield__label" for="photographer-email">Email</label>
    </div>

    <% if photographer.created_at.present? %>
      <div class="dates">
        <span class="date">Created at: <%=photographer.created_at.strftime('%d %b %y') %></span>
        <span class="date">Updated at: <%=photographer.updated_at.strftime('%d %b %y') %></span>
      </div>
    <% end%>

    <%= f.submit 'Save', class: "mdl-button mdl-js-button mdl-button--raised image-save-button"%>

   <%if photographer.images.present?%>
      <h4><%=pluralize photographer.images.length, 'Image'%></h4>
      <p>Click to see details</p>
      <div id="nwCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-inner">
            <% photographer.images.each_with_index do |image, index| %>
                <% klasses = 'carousel-item ' %>
                <% klasses += 'active' if index == 0 %>
                <div class="<%=klasses%>">
                  <%= link_to image_tag(image.url, class: 'front-image d-block w-100', alt: image.title, title: image.description), edit_image_path(image) %>
                </div>
            <%end%>
          </div>
        </div>
        <a class="carousel-control-prev" href="#landingPageCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#landingPageCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <%end%>

<%end%>

